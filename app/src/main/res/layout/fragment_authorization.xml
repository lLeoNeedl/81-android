<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="340dp"
    android:background="@drawable/authorization_window"
    android:orientation="vertical"
    tools:context=".FragmentAuthorization">

    <TextView
        style="@style/baseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:text="@string/header_sign_up"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp">

            <RadioButton
                android:id="@+id/rb_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/radio_btn"
                android:button="@android:color/transparent"
                android:checked="false" />

            <RadioButton
                android:id="@+id/rb_anonymous"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/radio_btn"
                android:button="@android:color/transparent"
                android:checked="true" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/secondaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="phone" />

            <TextView
                style="@style/secondaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="anonymous"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:layout_marginHorizontal="36dp"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Continue"
            android:textColor="#000000"
            style="@style/secondaryTextStyle"/>

    </FrameLayout>


</LinearLayout>