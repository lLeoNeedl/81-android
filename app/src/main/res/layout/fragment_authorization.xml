<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="340dp"
    android:background="@drawable/authorization_window"
    android:orientation="vertical"
    tools:context=".AuthorizationFragment">

    <TextView
        style="@style/baseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="48dp"
        android:text="@string/header_sign_up"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="32dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/radio_btn"
                android:button="@android:color/transparent"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_anonymous"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/radio_btn"
                android:button="@android:color/transparent"
                />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_phone"
                style="@style/secondaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="@string/rb_phone" />

            <TextView
                android:id="@+id/tv_anonymous"
                style="@style/secondaryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="@string/rb_anonymous" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_continue"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/base_btn_ripple"
        android:clickable="true"
        android:focusable="true">

        <TextView
            style="@style/secondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_continue"
            android:textColor="@color/black" />

    </FrameLayout>


</LinearLayout>