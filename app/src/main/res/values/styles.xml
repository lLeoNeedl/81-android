<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sansita_one_font</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="SecondaryTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="BoxHeaderStyle" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.App">
        <item name="colorAccent">@color/orange</item>
        <item name="android:fontFamily">@font/sansita_one_font</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>